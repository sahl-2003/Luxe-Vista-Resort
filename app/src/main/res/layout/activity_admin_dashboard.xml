<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/admin_bg_gradient"
    android:padding="0dp">

    <!-- Header with avatar/logo and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:background="@drawable/rounded_white_with_border"
            android:padding="12dp"
            android:elevation="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_100"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- CardView for dashboard actions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="24dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- 2x3 Grid for main actions -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/manageRoomsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Manage Rooms"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_100"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/manageServicesButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Manage Services"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_100"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/manageOffersButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Manage Offers"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_100"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/manageAttractionsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Manage Attractions"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_100"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/manageNotificationsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Manage Notifications"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primary_100"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:elevation="4dp"/>
            </GridLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary_100"
                app:strokeColor="@color/primary_100"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                android:elevation="2dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 